<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XLRecyclerView">
        <attr name="layoutType" format="enum">
            <enum name="LAYOUT_TYPE_GRID" value="0"/>
            <enum name="LAYOUT_TYPE_FLOAT" value="1"/>
        </attr>

        <attr name="dataType" format="enum">
            <enum name="DATA_TYPE_MARVEL" value="0"/>
            <enum name="DATA_TYPE_TENNIS" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="XLBottomView">
        <!--正常状态的颜色-->
        <attr name="normal_color" format="color"/>
        <!--选中状态的颜色-->
        <attr name="select_color" format="color"/>
        <!--两端是否给间距-->
        <attr name="hasLeftOrRightSize" format="boolean"/>
        <!--item的大小-->
        <attr name="item_size" format="integer"/>
        <!--item的布局-->
        <attr name="item_layout" format="reference"/>
        <!--按钮选中状态被点击是否响应事件-->
        <attr name="isSelectClick" format="boolean"/>
    </declare-styleable>
</resources>